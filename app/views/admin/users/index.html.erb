<h1>ユーザー管理</h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>ユーザーID</th>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>管理者</th>
      <th>タスク数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.user_name %></td>
        <td><%= user.email %></td>
        <td><%= "⭕️" if user.admin == true %></td>
        <td><%= user.tasks.count %></td>
        <td><%= link_to t('action.show'), user %></td>
        <td><%= link_to t('action.edit'), edit_admin_user_path(user) %></td>
        <td><%= link_to t('action.destroy'), user, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('action.new'), new_admin_user_path %>
<%= paginate @users %>