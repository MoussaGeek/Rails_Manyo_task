<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<h1><%= t("common.show_task") %></h1>

<div>
  <%= t("common.title") %>:
  <%= @task.title %>
</div>

<div>
  <%= t("common.content") %>:
  <%= @task.content %>
</div>

<div>
  <%= t("common.deadline") %>:
  <%= @task.deadline_on %>
</div>

<div>
  <%= t("common.priority") %>:
  <%= I18n.t("enums.task.priority_enum.#{@task[:priority]}") %>
</div>

<div>
  <%= t("common.status") %>:
  <%= I18n.t("enums.task.status_enum.#{@task[:status]}") %>
</div>

<%= link_to t("common.edit"), edit_task_path(@task), id: "edit-task" %> |
<%= link_to t("common.back"), tasks_path, id: "back" %>