<h1>ユーザー一覧</h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>管理者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.user_name %></td>
        <td><%= user.email.truncate(20) %></td>
        <td><%= "⭕️" if user.admin == true %></td>
        <td><%= link_to t('action.show'), user %></td>
        <td><%= link_to t('action.edit'), edit_user_path(user) %></td>
        <td><%= link_to t('action.destroy'), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('action.new'), new_user_path %>